@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">CRUDelicious Home Page</h1>
    <h1><a href="/New">Add Dish</a></h1>
    <hr>
    <div class="row mt-3">
        <div class="col-6">
            <h3>Recent Dishes</h3>
            <br>
            @foreach(Dish dish in ViewBag.AllDishes)
            {
                <p class="text-center"><a href="/ViewDish/@dish.DishId">@dish.Name</a> by @dish.Chef</p>
            }

        </div>
    </div>
</div>
