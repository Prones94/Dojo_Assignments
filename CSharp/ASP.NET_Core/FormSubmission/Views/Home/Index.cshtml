@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="text-success">Please fill the form below</p>
</div>

@model User
<form asp-action="Create" asp-controller="Home" method="POST">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="form-control col-4"></label>
        <input class="col-3" asp-for="FirstName" type="text"><br>
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="form-control col-4"></label>
        <input type="text" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Age"></span>
        <label class="form-control col-4" asp-for="Age"></label>
        <input type="text" asp-for="Age">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email" class="form-control col-4"></label>
        <input type="text" asp-for="Email" class="col-3">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password" class="form-control col-4"></label>
        <input type="password" asp-for="Password">
    </div>
    <div class="form-group">
        <button class="btn btn-success" value="Add User" type="submit">Register</button>
    </div>
</form>
