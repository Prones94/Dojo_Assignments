<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>DojoSurvey</title>
</head>

<body>
    <h1 class="text-center">Dojo Survey</h1>
    <hr>
    <div class="container rounded-lg col-6 bg-dark text-white py-3 my-3">
        <h3>Please fill out the information below.</h3>
        @model Survey
        <form asp-action="Create" method="POST">
            <div class="form-group mt-3">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Name"></label>
                <input type="text" name="Name" class="form-control" placeholder="Your Name here">
                <span class="text-danger" asp-validation-for="Location"></span>
                <label asp-for="Location"></label>
                <select name="Location" class="form-control">
                    <option value="">Select Location</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Dallas">Chicago</option>
                    <option value="Chicago">Los Angeles</option>
                    <option value="Seattle">Seattle</option>
                </select>
                <span class="text-danger" asp-validation-for="Language"></span>
                <label asp-for="Language"></label>
                <select name="Language" class="form-control">
                    <option value="">Select Language</option>
                    <option value="React">React</option>
                    <option value="Python">Python</option>
                    <option value="CSharp">CSharp</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span class="text-danger" asp-validation-for="Comment"></span>
                <label asp-for="Comment"></label>
                <textarea name="Comment" class="form-control" cols="10" rows="3"></textarea>
                <br>
                <input type="submit" value="Submit" class="btn btn-success">
            </div>
        </form>
    </div>
</body>

</html>